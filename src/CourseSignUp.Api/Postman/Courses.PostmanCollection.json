						"exec": [
							"let jsonData = pm.response.json()",
							"",
							"pm.test('assert that the result is a non-empty array', ",
							"    () => pm.expect(jsonData).to.be.an('array').that.is.not.empty)",
							"",
							"let sample = jsonData[0]",
							"",
							"pm.test('assert that one of the results contain expected information',",
							"    () => {",
							"        pm.expect(sample).to.have.property('name')",
							"        pm.expect(sample).to.have.property('minimumAge')",
							"        pm.expect(sample).to.have.property('maximumAge')",
							"        pm.expect(sample).to.have.property('averageAge')",
